{
  "name": "ng-new",
  "version": "0.0.0",
  "author": "",
  "license": "UNLICENSED",
  "private": true,
  "engines": {
    "node": ">= 12.0.0"
  },
  "scripts": {
    "ng": "ng",
    "build": "ng build",
    "build:prod": "ng build --configuration production",
    "build:docs": "ng build --configuration production --output-path docs --base-href /ng-new/",
    "start": "ng serve",
    "start:fr": "ng serve --configuration=fr --port=4201",
    "lint": "ng lint -- --fix",
    "test": "ng test",
    "test:e2e": "ng e2e",
    "docker:prod": "docker run -p 80:8080 -p 443:443 --name pwa pwa",
    "docker:build:prod": "docker build --target production -t pwa .",
    "cz": "cz",
    "doc": "compodoc -p tsconfig.json -s -o -d ./docs/compodoc --hideGenerator",
    "locale": "ng extract-i18n --output-path src/locale --format xlf && xliffmerge --profile xliffmerge.json",
    "analyze": "npm run build:prod -- --source-map && npx source-map-explorer dist/ng-new/en-US/main.*.js",
    "release": "standard-version --commitAll --releaseCommitMessageFormat \"release: v{{currentTag}}\"",
    "release:alpha": "standard-version --prerelease alpha --commitAll --releaseCommitMessageFormat \"release: v{{currentTag}}\""
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-customizable"
    },
    "cz-customizable": {
      "config": "./.cz-config.json"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "cz-customizable-ghooks",
      "pre-commit": "ng lint && lint-staged"
    }
  },
  "lint-staged": {
    "*.scss": "stylelint --fix --max-warnings 0",
    "**/*.{ts,tsx,js,jsx,vue,flow,gql,graphql,html,scss,css,less,json,yaml,yml,md}": "prettier --write"
  },
  "stylelint": {
    "extends": [
      "stylelint-config-sass-guidelines"
    ],
    "ignoreFiles": [
      "dist/**/*"
    ],
    "defaultSeverity": "warning",
    "rules": {
      "function-parentheses-space-inside": "never-single-line",
      "no-empty-source": null
    }
  },
  "standard-version": {
    "scripts": {
      "postbump": "npm run build:docs && git add docs"
    }
  },
  "dependencies": {
    "@angular/animations": "^12.0.0",
    "@angular/cdk": "^12.0.0",
    "@angular/common": "^12.0.0",
    "@angular/compiler": "^12.0.0",
    "@angular/core": "^12.0.0",
    "@angular/forms": "^12.0.0",
    "@angular/localize": "^12.0.0",
    "@angular/material": "^12.0.0",
    "@angular/platform-browser": "^12.0.0",
    "@angular/platform-browser-dynamic": "^12.0.0",
    "@angular/router": "^12.0.0",
    "@angular/service-worker": "^12.0.0",
    "rxjs": "~6.6.7",
    "tslib": "^2.0.0",
    "zone.js": "~0.11.4"
  },
  "devDependencies": {
    "@angular-devkit/build-angular": "^12.0.0",
    "@angular/cli": "^12.0.0",
    "@angular/compiler-cli": "^12.0.0",
    "@compodoc/compodoc": "^1.1.11",
    "@types/jasmine": "~3.6.0",
    "@types/jasminewd2": "~2.0.3",
    "@types/node": "^12.19.12",
    "codelyzer": "^6.0.0",
    "commitizen": "^4.2.4",
    "cz-customizable": "^6.3.0",
    "cz-customizable-ghooks": "^2.0.0",
    "husky": "^4.3.7",
    "jasmine-core": "~3.6.0",
    "jasmine-spec-reporter": "~5.0.0",
    "karma": "~6.3.2",
    "karma-chrome-launcher": "~3.1.0",
    "karma-coverage-istanbul-reporter": "~3.0.2",
    "karma-jasmine": "~4.0.0",
    "karma-jasmine-html-reporter": "^1.5.0",
    "lint-staged": "^10.5.3",
    "ngx-i18nsupport": "^0.17.1",
    "prettier": "2.0.5",
    "protractor": "~7.0.0",
    "rxjs-tslint-rules": "^4.34.7",
    "standard-version": "^9.1.0",
    "stylelint": "^13.8.0",
    "stylelint-config-sass-guidelines": "^7.1.0",
    "ts-node": "~8.3.0",
    "tslint": "~6.1.0",
    "tslint-config-prettier": "^1.18.0",
    "tslint-etc": "^1.13.9",
    "typescript": "~4.2.4"
  }
}
